/*!********************************************
		Block .main-nav
**********************************************/
.main-nav
	display none
	position absolute
	top $header-hight
	left 0
	z-index 10
	width 100%
	height 17.5rem
	margin 0
	padding 0
	background-color rgba($base-bg-color, .9)
	+above($media-xs)
		left 23.4375%
		width 53.125%
	+above($media-lg)
		display block
		position relative
		top 0
		left 0
		z-index 0
		width 48.5815602836879%
		min-width 37.5rem
		height $header-hight
		margin-right 10%
		
	&--isMobile
		display block
	
	/*!*** elem menu *****/
	&__menu
		//mixin init
		flex-container(column, wrap, stretch, center)
		height 100%
		margin 0
		padding 0
		list-style none
		text-align center
		+above($media-lg)
			flex-direction row
			justify-content space-between
			height $header-hight
	
	/*!*** elem item *****/
	&__item
		width 100%
		height $header-hight
		+above($media-lg)
			width auto
		+above($media-lg)
			height 100%
	
	/*!*** elem link *****/
	&__link
		box-sizing border-box
		display block
		width 100%
		height $header-hight
		padding 0 .625em
		line-height @height
		font-size $base-font-size-sm
		text-decoration none
		color $base-text-color
		transition all .2s ease .2s
		&:hover
		&:active
			color $base-text-color-hovered
		+above($media-lg)
			width auto
		
		/*!*** modifier active *****/
		&--active
			color $base-text-color-active
			border-bottom .25em solid $base-text-color-active
			&:link
			&:hover
			&:active
				color $base-text-color-active
				cursor default
	
