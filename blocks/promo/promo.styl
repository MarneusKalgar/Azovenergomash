/*!********************************************
		Block .promo
**********************************************/
.promo
	//mixin init
	flex-container(column, wrap, flex-start, center)
	position relative
	z-index 1
	height 64.5625rem
	margin 0
	padding 0
	background #fff url('../img/promo/promo-bg-xs.jpg') 0 -4.3rem no-repeat
	+above($media-xs)
		background #fff url('../img/promo/promo-bg-lg.jpg') 0 -4.3rem no-repeat
		
	/*!*** modifier isFixed *****/
	&--isPositioned
		box-sizing border-box
		padding-top $header-hight
	
	/*!*** elem title *****/
	&__title
		width auto
		margin 0
		padding 18rem 1rem 0
		font bold $promo-heading-font-size * .6 / $promo-heading-line-height $heading-font-family
		color $heading-color	
		text-transform uppercase
		text-align center
		letter-spacing $promo-letter-spacing
		//mixin init
		text-overflow(normal, ellipsis, hidden)
		+above($media-xs)
			font-size $promo-heading-font-size * .8
		+above($media-md)
			font-size $promo-heading-font-size
		+above($media-lg)
			width 70rem
			padding 12.6rem 0 0
			text-align left
			white-space pre
	
	/*!*** elem desc *****/
	&__desc
		margin .5rem 0 0
		color $promo-text-color
		line-height $promo-line-height
		font-size $promo-text-font-size * .8
		text-align center
		letter-spacing .02em
		//mixin init
		text-overflow(normal, ellipsis, hidden)
		&:nth-of-type(2)
			width 80%
			margin 0
			padding 6rem 1rem 0
			+above($media-xs)
				padding 9.4rem 0 0
			+above($media-lg)
				width 50rem
				margin-right 2.5rem
		+above($media-md)
			font-size $promo-text-font-size
		+above($media-lg)
			width 50%
			margin-top -3.1rem
			text-indent 1.5rem
			white-space pre
			
	/*!*** elem sign *****/
	&__sign
		position absolute
		left 45.5%
		bottom 1.5rem
		z-index 100
		width 2rem
		height 3.385rem
		background transparent embedurl('data:image/svg+xml;base64,') 0 0 no-repeat
		background-size cover
		+above($media-xs)
			left 49.5%