/*!********************************************
		Block .promo
**********************************************/
.promo
	//mixin init
	flex-container(column, wrap, flex-start, center)
	position relative
	z-index 10
	height $promo-height
	margin 0
	padding 0
	overflow hidden
	
	/*!*** modifier isFixed *****/
	&--isPositioned
		margin-top $header-hight * .8
		+above($media-mob-xs)
			margin-top $header-hight
			
	&__parallax
		position absolute
		left 0
		top 0
		z-index -100
		width 100%
		height $promo-height
		overflow hidden
		background url('../img/promo/promo-bg-xs.jpg') 0 -4.3rem no-repeat
		+above($media-xs)
			background url('../img/promo/promo-bg-lg.jpg') 0 -4.3rem no-repeat

		
	/*!*** elem title *****/
	&__title
		width auto
		margin 0
		padding 13rem 1rem 0
		font bold $promo-heading-font-size * .5 / $promo-heading-line-height * .8 $heading-font-family
		color $heading-color	
		text-transform uppercase
		text-align center
		letter-spacing $promo-letter-spacing
		//mixin init
		text-overflow(normal, ellipsis, hidden)
		+above($media-mob-xs)
			padding-top 18rem
			line-height $promo-heading-line-height
		+above($media-xs)
			padding 18rem 2rem 0
			font-size $promo-heading-font-size * .8
		+above($media-md)
			font-size $promo-heading-font-size
		+above($media-lg)
			width 70rem
			padding 12.6rem 0 0
			text-align left
			white-space pre
	
	/*!*** elem desc *****/
	&__desc
		margin .5rem 0 0
		color $promo-text-color
		line-height $promo-line-height
		font-size $promo-text-font-size * .7
		text-align center
		letter-spacing .02em
		//mixin init
		text-overflow(normal, ellipsis, hidden)
		&:nth-of-type(2)
			width 80%
			margin 0
			padding 4.5rem 1rem 0
			+above($media-mob-xs)
				padding-top 6rem
			+above($media-xs)
				padding 9.4rem 0 0
			+above($media-lg)
				width 50rem
				margin-right 2.5rem
		+above($media-mob-xs)
			font-size $promo-text-font-size * .8		
		+above($media-md)
			font-size $promo-text-font-size
		+above($media-lg)
			width 50%
			margin-top -3.1rem
			text-indent 1.5rem
			white-space pre
			
	/*!*** elem sign *****/
	&__sign
		position absolute
		left 45.5%
		bottom 1.5rem
		z-index 100
		width 2rem * .8
		height 3.385rem * .8
		background transparent embedurl('data:image/svg+xml;base64,') 0 0 no-repeat
		background-size cover
		+above($media-mob-xs)
			width 2rem
			height 3.385rem
		+above($media-xs)
			left 49.5%