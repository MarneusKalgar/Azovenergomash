/*!********************************************
		Block .strategy
**********************************************/
.strategy
	position relative
	z-index 500
	min-height 27.8125rem
	padding-bottom 1rem
	box-sizing border-box
	
	/*!*** elem title *****/
	&__title
		margin 0
		padding 7.75rem 0 3rem
		//mixin init
		heading(
			$heading-font-weight,
			$heading-font-size * .8,
			$heading-font-family,
			center,
			$heading-color,
			$heading-letter-spacing
		)
		background transparent embedurl('data:image/svg+xml;base64,') 50% 10.5rem no-repeat
		background-size 1.6625rem 1.25rem
		+above($media-mob-xs)
			font-size $heading-font-size
	
	/*!*** elem desc *****/
	&__desc
		width auto
		margin 0 auto
		padding 0 1rem 0
		text-align center
		letter-spacing .05rem
		line-height $base-line-height * .8
		overflow(normal, ellipsis, hidden)
		+above($media-mob-xs)
			line-height $base-line-height
		+above($media-md)
			width 60%
		+above($media-lg)
			width 43.5%
							
		
			
		
