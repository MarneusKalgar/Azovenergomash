/*!********************************************
		Block .location
**********************************************/
.location
	margin 0
	padding 0 0 4rem
	
	/*!*** elem title *****/
	&__title
		margin 0
		padding 8rem 1rem 2.7rem
		//mixin init
		heading(
			$heading-font-weight,
			$heading-font-size,
			$heading-font-family,
			center,
			$heading-color,
			$heading-letter-spacing
		)
	
	/*!*** elem map *****/
	&__map
		box-sizing border-box
		width 100%
		margin 0 auto
		padding 0 1rem
		+above(34em)
			width 31.25rem
		+above($media-md)
			width auto
		+above($media-xlg)
			width 87.5rem
			padding 0
	
	/*!*** elem img *****/
	&__img
		display block
		width 100%
		min-width 100%
		height auto
	
	/*!*** elem legend *****/
	&__legend
		//mixin init
		flex-container(column, wrap, center, flex-start)
		width 22rem
		margin 0 auto
		padding 1.2rem 0 0
		list-style none
		+above($media-md)
			flex-direction row
			justify-content flex-start
			width 39rem
		+above($media-xlg)
			width 90%
			justify-content space-between
	
	/*!*** elem item *****/
	&__item
		width 17.5rem
		height 2rem
		padding 0 2rem 0 2rem
		line-height @height
		font-size $base-font-size-sm
		background url('../img/location/location__legend-sprite.png') 0 0 no-repeat
		&:nth-child(even)
			width 15rem
			padding-right 0
		&:nth-child(1)
			background-position 0rem 0.2rem
		&:nth-child(2)
			background-position 0rem -2.6rem
		&:nth-child(3)
			background-position 0rem -5.5rem
		&:nth-child(4)
			background-position 0rem -8.2rem
		+above($media-xlg)
			width auto
			padding 0 .5rem 0 2rem

	/*!*** elem info *****/	
	&__info
		box-sizing border-box
		width auto
		margin 0 auto
		padding 2rem 1rem 0
		font-size $base-font-size-md
		line-height $base-line-height
		text-align center
		+above($media-md)
			width 55%
			