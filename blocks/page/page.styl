/*!********************************************
		Block .page
**********************************************/
.page
	margin 0
	padding 0
	font $base-font-size-md $base-font-family
	text-rendering optimizeLegibility
	color $base-text-color
	background-color $base-bg-color 
	
	/*!*** elem wrap *****/
	&__wrap
		margin 0 auto
		max-width 118.75rem //1900px
		min-width 29rem //464px
	
	/*!*** elem to-top *****/
	&__to-top
		right 1rem
		bottom 1rem
		+above($media-md)
			right 2rem
			bottom 2rem
		
